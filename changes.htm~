// Category: Control
for each [v v] in [10] :: control cstart // Alpha Version 0.01+
end
while <> :: control cstart // Alpha Version 0.01+
end
all at once :: control cstart // Alpha Version 0.01+
end
clear counter :: control stack // Alpha Version 0.01-0.02
incr counter :: control stack // Alpha Version 0.01-0.02
(counter :: control) // Alpha Version 0.01-0.02
